const mongoose = require('mongoose')


const thesisSchema = new mongoose.Schema({
    thesis_title:{
        type: String,
        unique: true,
        trim: true,
        required: true
    },
    thesis_publish_date:{
        type: String,
        trim: true,
        required: true
    },
    thesis_author:{
        type: String,
        required: true
    },
    thesis_keyword:{
        type: String,
        required: true
    },
    thesis_category:{
        type: String,
        required: true
    },
    thesis_price:{
        type: Number,
        trim: true,
        required: true
    },
    thesis_abstract:{
        type: String,
        required: true
    },
    thesis_file:{
        type: Object,
        required: true
    }
    
}, {
    timestamps: true //important
})


module.exports = mongoose.model("Thesis", thesisSchema)